<%- include('../partials/nav') %>
<h1>This is flights/edit</h1>
<main>
  <form class="new-form" action="/flights/<%= flight._id %>?_method=PUT" method="POST">
    <label for="airline">Airline:</label>
    <select name="airline" id="airline">
        <% airlineOption.forEach(e => { %>
            <option value=<%= e %> <%= flight.airline === e ? "selected" : "" %>
                ><%= e %></option>
        <% }) %>
    </select>
    <label for="airport">Airport</label>
    <select name="airport" id="airport">
        <% airportOption.forEach(e => { %>
            <option value=<%= e %> <%= flight.airport === e ? "selected" : "" %>
                ><%= e %></option>
        <% }) %>
    </select>
    <label for="flightNo">Flight#</label>
    <input type="number" name="flightNo" id="flightNo" value="<%= flight.flightNo %>" required />
    <input type="datetime-local" 
           name="departs" 
           class="date-time" 
           value="<%= date %>"
    >
    <button type="submit">Submit</button>
  </form>
</main>
