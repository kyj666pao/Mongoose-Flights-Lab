<%- include('../partials/nav') %>

<main>
  <h1><%= title %></h1>
  <form class="new-form" action="/flights" method="post">
    <label for="airline">Airline:</label>
    <select name="airline" id="airline">
      <option value="American">American</option>
      <option value="Southwest">Southwest</option>
      <option value="United">United</option>
    </select>
    <label for="airport">Airport</label>
    <select name="airport" id="airport">
      <option value="AUS">AUS</option>
      <option value="DFW">DFW</option>
      <option value="DEN" selected>DEN</option>
      <option value="LAX">LAX</option>
      <option value="SAN">SAN</option>
    </select>
    <label for="flightNo">Flight#</label>
    <input type="number" name="flightNo" id="flightNo" min="10" max="9999" required />
    <label for="departs">Depart time</label>
    <input type="datetime-local" 
           name="departs" 
           class="date-time" 
           value="<%= date %>"
    >
    <button type="submit">Submit</button>
  </form>
</main>
<%- include('../partials/footer') %>
